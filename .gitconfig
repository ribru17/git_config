[user]
	email = ribru17@hotmail.com
	name = Riley Bruins
[core]
	editor = nvim
	pager = delta
[credential]
	helper = libsecret
[delta]
	navigate = true
	syntax-theme = Dracula
	side-by-side = false
	line-numbers = true
[alias]
	a = add
	b = branch
	db = branch -d
	c = commit
	ca = commit -a
	d = diff
	p = push
	po = push origin
	poc = !git push origin $(git symbolic-ref --short HEAD)
	pod = push -u origin master
	new = checkout -b
	uncommit = reset HEAD~1
	recommit = reset ORIG_HEAD
	info = !git remote -v && git status && git diff
[pull]
	rebase = true
[merge]
	tool = vimdiff
	ff = false
[mergetool]
	keepBackup = false
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $MERGED $REMOTE -c 'wincmd l'
